  "exception_rules": {
    "automatic_exceptions": [
      {
        "rule": "medical_terminology",
        "description": "Automatic exception for medical terms",
        "pattern": "medical_context_indicators",
        "action": "whitelist"
      },
      {
        "rule": "proper_nouns",
        "description": "Automatic exception for proper nouns",
        "pattern": "capitalization_patterns",
        "action": "whitelist"
      }
    ],
    "conditional_exceptions": [
      {
        "rule": "educational_context",
        "description": "Conditional exception for educational discussions",
        "conditions": ["academic_indicators", "educational_purpose"],
        "action": "reduce_severity"
      },
      {
        "rule": "artistic_expression",
        "description": "Conditional exception for artistic works",
        "conditions": ["creative_context", "artistic_merit"],
        "action": "reduce_severity"
