  "obfuscation_patterns": {
    "spacing_variations": {
      "word_splitting": {
        "description": "Characters separated by spaces or other delimiters",
        "patterns": [
          "\\b([a-z])\\s+([a-z])\\s+([a-z])\\b",
          "\\b([a-z])[-_.]([a-z])[-_.]([a-z])\\b",
          "\\b([a-z])\\s*[|]\\s*([a-z])\\s*[|]\\s*([a-z])\\b"
        ],
        "examples": ["f u c k", "s-h-i-t", "d.a.m.n", "b|i|t|c|h"]
      },
      "interspersed_characters": {
        "description": "Extra characters inserted between letters",
        "patterns": [
          "([a-z])[^a-z]*([a-z])[^a-z]*([a-z])",
          "([a-z])[0-9]+([a-z])[0-9]+([a-z])",
          "([a-z])[*@#$]+([a-z])[*@#$]+([a-z])"
        ],
        "examples": ["f123u456c789k", "s*h*i*t", "d@m@n"]
      }
    },
    "repetition_patterns": {
      "character_repetition": {
        "description": "Extra repeated characters for emphasis",
        "patterns": [
          "([a-z])\\1{2,}",
          "([aeiou])\\1+",
          "([bcdfghjklmnpqrstvwxyz])\\1+"
        ],
        "examples": ["fuuuuck", "shiiiit", "dammmn", "asssss"]
      },
      "syllable_repetition": {
        "description": "Repeated syllables or word parts",
        "patterns": [
          "([a-z]{2,})\\1+",
          "(fu|shi|dam)\\1+"
        ],
        "examples": ["fufufuck", "shishishit", "damdamn"]
      }
    },
    "case_variations": {
      "alternating_case": {
        "description": "Mixed uppercase and lowercase patterns",
        "patterns": ["([A-Z][a-z])+", "([a-z][A-Z])+"],
        "examples": ["FuCk", "sHiT", "dAmN", "AsS"]
      },
      "random_case": {
        "description": "Random capitalization patterns",
        "patterns": ["[A-Za-z]*[A-Z][a-z]*[A-Z][A-Za-z]*"],
        "examples": ["fuCK", "SHit", "DAmn"]
      }
    },
    "prefix_suffix_obfuscation": {
      "prefix_addition": {
        "description": "Adding prefixes to obscure words",
        "common_prefixes": ["x", "z", "ur", "my", "the", "a"],
        "examples": ["xfuck", "zshit", "urdamn"]
      },
      "suffix_addition": {
        "description": "Adding suffixes to obscure words",
        "common_suffixes": ["er", "ing", "ed", "ly", "s", "x", "z"],
        "examples": ["fucker", "fucking", "damns", "shitx"]
      }
    },
    "phonetic_variations": {
      "sound_alike": {
        "description": "Words that sound similar to profanity",
        "patterns": [
          "ph -> f sound substitutions",
          "ck -> k sound substitutions",
          "double consonant reduction"
        ],
        "examples": ["phuck", "fuk", "sht", "dam"]
      },
      "vowel_dropping": {
        "description": "Removing vowels from words",
        "patterns": ["[bcdfghjklmnpqrstvwxyz]+"],
        "examples": ["fck", "sht", "dmn", "btch"]
      }
    }
  },
